---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FloatingCTA from '../components/FloatingCTA.astro';
import LeadForm from '../components/LeadForm.astro';
import heroVideo from '../assets/WhatsApp Video 2025-06-14 at 21.29.11.mp4';
---

<Layout title="Home">
  <Navigation />
  <FloatingCTA />
  
  <!-- Hero Section with Video Background -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/60 via-slate-800/40 to-slate-900/60 z-10"></div>
      <video
        autoplay
        muted
        loop
        class="w-full h-full object-cover"
        poster="https://images.pexels.com/photos/162568/office-home-house-desk-162568.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&fit=crop"
      >
        <source src={heroVideo} type="video/mp4">
        <!-- Fallback image -->
        <img src="https://images.pexels.com/photos/162568/office-home-house-desk-162568.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&fit=crop" alt="Metal cutting process" class="w-full h-full object-cover">
      </video>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-suissnord text-white mb-6 animate-fade-in">
          Precision Laser Fabrication
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-olive-400 to-teal-400 mt-2">
            Beyond Excellence
          </span>
        </h1>
        <p class="text-xl md:text-2xl font-lugio text-white/90 mb-8 max-w-3xl mx-auto animate-slide-up">
          Expert laser cutting, sheet metal fabrication, and custom metal designs. 
          From concept to creation, we deliver precision at every step.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
          <a href="#process" class="bg-gradient-to-r from-olive-600 to-teal-600 text-white px-8 py-4 rounded-lg font-semibold hover:from-olive-700 hover:to-teal-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            See Our Process
          </a>
          <a href="#quote" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-slate-900 transition-all duration-300">
            Get Quote
          </a>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
      <div class="animate-bounce">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </section>
  
  <!-- Main Content Section -->
  <section id="process" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column - Process Steps -->
        <div class="animate-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
            Simple 3-Step Process
          </h2>
          
          <div class="space-y-8">
            <!-- Step 1 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-olive-600 to-teal-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-lg">1</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">Design Selection</h3>
                <p class="text-slate-600">
                  Bring your own design or choose from our extensive collection of templates. 
                  Our team helps you optimize your design for precision cutting.
                </p>
              </div>
            </div>
            
            <!-- Step 2 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-olive-600 to-teal-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-lg">2</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">Custom Quotation</h3>
                <p class="text-slate-600">
                  Contact our team to discuss quantity, material type, and specifications. 
                  Get your customized quote starting from just â‚¹50.
                </p>
              </div>
            </div>
            
            <!-- Step 3 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-olive-600 to-teal-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-lg">3</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">Factory Pickup</h3>
                <p class="text-slate-600">
                  Visit our factory to collect your precision-cut metal sheets. 
                  Quality guaranteed, delivered on time.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Right Column - Lead Form -->
        <div id="quote" class="animate-on-scroll">
          <LeadForm />
        </div>
      </div>
    </div>
  </section>
  
  
  <!-- Achievement Metrics -->
  <section class="py-20 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-olive-600/20 to-teal-600/20"></div>
      <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Numbers That Speak
        </h2>
        <p class="text-slate-300 text-lg">
          Our commitment to excellence reflected in measurable results
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center animate-on-scroll">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-olive-600/20 to-teal-600/20 rounded-full blur-xl"></div>
            <div class="relative text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-olive-400 to-teal-400 mb-2">
              <span class="counter" data-target="500">0</span>+
            </div>
          </div>
          <p class="text-slate-300 text-lg">Happy Clients</p>
        </div>
        
        <div class="text-center animate-on-scroll">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-teal-600/20 to-olive-600/20 rounded-full blur-xl"></div>
            <div class="relative text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-olive-400 mb-2">
              <span class="counter" data-target="10000">0</span>+
            </div>
          </div>
          <p class="text-slate-300 text-lg">Projects Completed</p>
        </div>
        
        <div class="text-center animate-on-scroll">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-olive-600/20 to-teal-600/20 rounded-full blur-xl"></div>
            <div class="relative text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-olive-400 to-teal-400 mb-2">
              <span class="counter" data-target="35">0</span>+
            </div>
          </div>
          <p class="text-slate-300 text-lg">Years Experience</p>
        </div>
        
        <div class="text-center animate-on-scroll">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-teal-600/20 to-olive-600/20 rounded-full blur-xl"></div>
            <div class="relative text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-olive-400 mb-2">
              <span class="counter" data-target="99">0</span>%
            </div>
          </div>
          <p class="text-slate-300 text-lg">Quality Assurance</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-olive-600 to-teal-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Ready to Bring Your Vision to Life?
      </h2>
      <p class="text-xl mb-8 text-olive-100">
        Contact us today for a free consultation and discover how we can help you achieve precision in every cut.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-olive-600 px-8 py-4 rounded-lg font-semibold hover:bg-olive-50 transition-colors shadow-lg">
          Get Started Today
        </a>
        <a href="/work" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-olive-600 transition-colors">
          View Our Work
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>
