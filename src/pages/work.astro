<script>
  // Portfolio filtering
  const filterButtons = document.querySelectorAll('.filter-btn');
  const portfolioItems = document.querySelectorAll('.portfolio-item');
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      // Update active button
      filterButtons.forEach(btn => {
        btn.classList.remove('active', 'text-[#610000]', 'text-white');
        btn.classList.add('bg-slate-100', 'text-slate-700');
      });
      button.classList.add('active', 'bg-[#D34E4E]', 'text-white');
      button.classList.remove('bg-slate-100', 'text-slate-700');
      
      // Filter portfolio items
      portfolioItems.forEach(item => {
        const category = item.getAttribute('data-category');
        if (item instanceof HTMLElement) { // Check if item is an HTMLElement
          if (filter === 'all' || category === filter) {
            item.style.display = 'block';
            item.classList.add('animate-fade-in');
          } else {
            item.style.display = 'none';
          }
        }
      });
    });
  });
  
  // Lazy loading for images
  const imageObserver = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const img = entry.target as HTMLImageElement; // Assert img as HTMLImageElement
        if (img.dataset.src) { // Check if dataset.src exists
          img.src = img.dataset.src;
        }
        img.classList.remove('opacity-0');
        img.classList.add('opacity-100');
        observer.unobserve(img);
      }
    });
  });
  
  document.querySelectorAll('img[data-src]').forEach(img => {
    if (img instanceof HTMLImageElement) { // Check if img is an HTMLImageElement
      imageObserver.observe(img);
    }
  });
</script>
