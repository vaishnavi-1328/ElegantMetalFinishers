    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in">
          Our Work Portfolio
        </h1>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto animate-slide-up">
          Discover the precision and artistry in every piece we create. 
          From concept to completion, excellence in every detail.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Filter Tabs -->
  <section class="py-8 bg-white border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-4">
        <button class="filter-btn active px-6 py-3 rounded-full bg-[#D34E4E] text-white hover:bg-[#B73237] transition-colors" data-filter="all">
          All Projects
        </button>
        <button class="filter-btn px-6 py-3 rounded-full bg-slate-100 text-[slate-700] hover:bg-slate-200 transition-colors" data-filter="laser-cutting">
          Laser Cutting
        </button>
