---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FloatingCTA from '../components/FloatingCTA.astro';

import automotivePartsImg from '../assets/automotive parts.jpg';
import industrySparePartsImg from '../assets/industry_spare_parts.jpeg';
import architecturalImg from '../assets/facade_design.jpeg';
import elevationImg from '../assets/Elevation design.jpeg';
import gatedesign from '../assets/gate_design1.jpeg';
import wal_deco from '../assets/Wall_deco.jpeg';
import tube_cut from '../assets/tube laser cut .jpg'
